.background-top {
  min-height: 25%;
  background: linear-gradient(0deg, rgba(254,154,190,1) 0%, rgba(205,195,248,1) 100%);
}

.avatar {
  width:125rpx;
  height:125rpx;
  border-radius:50%;
  flex-shrink: 0;
  flex-grow: 0;
  border: 4rpx solid #1CD9C6;
}

.friends{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.friend-card{
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.nickname{
  padding-left: 20rpx;
}

.empty-space {
  height: 200rpx;
}