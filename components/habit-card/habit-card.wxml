<view class="task-card">
    <view class="bar">
    </view>
    <view class="h100 px10 flex items-center justify-around">
    <navigator url="/pages/habit/habit" class="w60 h100 flex items-center justify-center">
      <view class="task-name">{{info.name}}</view>
    </navigator>
    <view class="w40 h100 flex items-center justify-center">
      <view class="row-around">
        <view bindtap="showDialog1" class="step-icon-{{filled1}} mr20"></view>
        <view class="step-icon-{{filled2}} mr20"></view>
        <view class="step-icon-{{filled3}}"></view>
        <view wx:if="{{dialog1}}">
          <l-dialog 
          id="task1"
          l-class="dialog"
          l-cancel-class="cancel-btn"
          l-confirm-class="confirm-btn"
          l-content-class="step-name"
          bind:linconfirm = "confirm"
          show="{{true}}"
          type="confirm"  
          show-title="{{false}}"
          content="Pack gym clothes"
          confirm-text="Done"
          confirm-color="#2C12A1"
          cancel-text="Cancel"
          cancel-color="#999" />
        </view>        
      </view>
      </view>
    </view>
</view>
