/* components/task-card/task-card.wxss */
.task-card {
  position: relative;
  width: 600rpx;
  height: 120rpx;
  background: #FFFFFF;
  border: 4rpx solid #2C12A1;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.task-name {
  padding: 30rpx;
  padding-left: 30rpx;
  font-family: VT323;
  font-style: normal;
  font-weight: normal;
  font-size: 50rpx;
  color: #2C12A1;
}

.cube {
  width: 60rpx;
  height: 60rpx;
  background: #C6C6C7;
  border: 2rpx solid #2C12A1;
  box-sizing: border-box;
  margin-left: 30rpx;
}
.done {
  background: #A0F337 !important;
}