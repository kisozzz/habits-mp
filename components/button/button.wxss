/* components/button/button.wxss */
@import '/app';

.button-purple {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 500rpx;
  height: 100rpx;
  background: #DBDDFC;
  border: 2rpx solid #000000;
  box-sizing: border-box;
  box-shadow: 0rpx 6rpx 0rpx rgba(0, 0, 0, 0.7);
}

.button-grey {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 500rpx;
  height: 100rpx;
  background: #F4F4F4;
  border: 2rpx solid #000000;
  box-sizing: border-box;
  box-shadow: 0rpx 6rpx 0rpx rgba(0, 0, 0, 0.7);
}

.label {
  font-family: VT323;
  font-style: normal;
  font-weight: normal;
  font-size: 56rpx;
  line-height: 56rpx;
  text-align: center;
  letter-spacing: 3rpx;
  color: #1E1C26;
}