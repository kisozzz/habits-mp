<view class="bar relative">
  <view class="vw row-around">
    <navigator class="tab-text" url="/pages/index/index">HOME</navigator>
    <block wx:if="{{info.groups.length === 1}}">
    <navigator class="tab-text" url="/pages/group/group?id={{info.group[0].id}}">GROUP</navigator>
    </block>
    <block wx:elif="{{info.groups.length === 0}}">
    <navigator class="tab-text" url="/pages/create-group/create-group">GROUP</navigator>
    </block>
    <block wx:else>
    <navigator class="tab-text" url="/pages/groups-select/groups-select?id={{info.user.id}}">GROUPS</navigator>
    </block>
  </view>
  <navigator bindtap="displayCreateOptions" class="tab" url="#"><image class="logo" src="/images/icons/plusgame.svg"></image></navigator>
  <navigator url="/pages/progress/progress" class="dynamic-tab-left" wx:if="{{createMenuOpen}}">
    <view class="dynamic-tab-inner-sm text-primary inconsolata tab-text-small">My Progress</view>
  </navigator>
  <navigator url="/pages/create-habit/create-habit" class="dynamic-tab-right relative" wx:if="{{createMenuOpen}}">
    <view class="dynamic-tab-inner text-primary inconsolata">New Habit</view>
  </navigator>
  <navigator class="dynamic-tab-center" wx:if="{{createMenuOpen}}">
    <view class="dynamic-tab-inner text-primary inconsolata">Latest Habit</view>
  </navigator>
</view>