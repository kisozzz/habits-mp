<!--components/tabbar/tabbar.wxml-->
<view class="bar relative">
  <view class="vw row-around">
    <navigator class="tab-text" url="/pages/index/index">HOME</navigator>
    <navigator class="tab-text" url="/pages/group/group">GROUP</navigator>
  </view>
  <navigator bindtap="displayCreateOptions" class="tab" url="#"><image class="logo" src="/images/icons/plusgame.svg"></image></navigator>
  <navigator class="dynamic-tab-left" wx:if="{{createMenuOpen}}">
    <view class="dynamic-tab-inner text-primary inconsolata">My Progress</view>
  </navigator>
  <navigator class="dynamic-tab-right relative" wx:if="{{createMenuOpen}}">
    <view class="dynamic-tab-inner text-primary inconsolata">New Habit</view>
  </navigator>
  <navigator class="dynamic-tab-center" wx:if="{{createMenuOpen}}">
    <view class="dynamic-tab-inner text-primary inconsolata">Latest Habit</view>
  </navigator>
</view>