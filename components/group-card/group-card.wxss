/* components/group-card/group-card.wxss */
@import '/stylesheets/index';

.group-card {
  display: flex;
  position: relative;
  flex-direction: column;
  width: 652rpx;
  height: 300rpx;
  background: #FFFFFF;
  border: 4rpx solid #2C12A1;
  box-sizing: border-box;
  box-shadow: 0rpx 8rpx 0rpx #2C12A1;
  border-radius: 4rpx;
  
}

.icon-arrow{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  padding: 20rpx;
  right: 0;
  top: 0;
}

.title {
  font-family: Inconsolata;
  font-style: normal;
  font-weight: 400;
  font-size: 50rpx; 
  line-height: 28px;
  /* color: #1E1C26;  */
  padding: 20rpx;
  padding-left: 50rpx;
  
}

.avatar {
  width:105rpx;
  height:105rpx;
  border-radius:50%;
  /* flex-shrink: 0;
  flex-grow: 0; */
  box-shadow: 0rpx 4rpx 6rpx #2C12A1;

}