/* components/add-friends/add-friends.wxss */
.label {
  font-family: Overpass Mono;
  font-style: normal;
  font-weight: normal;
  font-size: 34rpx;
  line-height: 64rpx;
  color: #1E1C26;
  padding-bottom:14rpx;
}

.plusicon{
  width: 164rpx;
  height: 164rpx;
  position: relative;
  object-position: center;
  display: flex;
  justify-content: center;
}

.section {
  margin: 50rpx;
  margin-top: 80rpx;
}

.form-container{
  width: 100%;
  height: 100vh;
}

button[plain] {
  border: 0;
  padding: 0;
  margin: 0;
}

.share-hide {
  position: absolute;
  height: 120rpx;
  width: 200rpx;
  z-index: 100;
  overflow: hidden;
}

.share-hide button {
  width: 200rpx;
  height: 60rpx;
}

.share-section{
  width: 100%;
  margin: auto;
  justify-content: center;
  display: flex;
}
