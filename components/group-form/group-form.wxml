<!--components/group-form/group-form.wxml-->
<view class="form-container">
  <form bindsubmit="submit">
    <view class="title">Create a Group</view>
    <view class="card-container">
      <image class="lines" src="/images/big-lines.svg"></image>
      <instruction-card class="card1" color="red" text="what is a group? invite your friends to the group"/>
      <instruction-card class="card2" color="green" text="what is a group? invite your friends to the group"/>
      <instruction-card class="card3" color="yellow" text="what is a group? invite your friends to the group"/>
    </view>
    <view class="section">
      <input class="title-input" name="name" placeholder="Type Group Name" placeholder-style="font-family: Overpass Mono; color: #C6C6C6;" ></input>
    </view>
   
    <view slot="submit" class="section">
     <button formType="submit" class="btn-big">Create</button>
    </view>
  </form>
</view>