/* components/group-form/group-form.wxss */
@import '/stylesheets/index';


.title {
  font-family: VT323;
  font-style: normal;
  font-weight: normal;
  font-size: 36px;
  line-height: 36px;
  color: #2C12A1;
  text-align: center;
  padding: 40rpx;
}

.title-input {
  width: 550rpx !important;
  height: 76rpx !important;
  background: #FFFFFF;
  border: 2rpx solid #1E1C26;
  box-sizing: border-box;
  box-shadow: inset 0rpx 6rpx 0rpx rgba(0, 0, 0, 0.25);
  margin: auto;
  padding-left: 80rpx;
  padding-right: 80rpx;
}
.label {
  font-family: Overpass Mono;
  font-style: normal;
  font-weight: normal;
  font-size: 34rpx;
  line-height: 64rpx;
  color: #1E1C26;
  padding-bottom:14rpx;
}


.section {
  margin: 50rpx;
  margin-top: 80rpx;
}

.form-container{
  width: 100%;
  height: 100vh;
}



.btn-big {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 550rpx !important;
  height: 80rpx;
  margin-top: 130rpx;
  background: #DBDDFC;
  border: 2rpx solid #1E1C26;
  border-radius: 0 !important;
  box-sizing: border-box;
  box-shadow: 0rpx 6rpx 0rpx #2C12A1;

  font-family: VT323;
  font-style: normal;
  font-weight: normal;
  font-size: 50rpx;
  line-height: 56rpx;
  text-align: center;
  letter-spacing: 3rpx;
  color: #2C12A1;
}

.card-container{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.card1{
  position: absolute;
  top: 3%;
}
.card2 {
  position: absolute;
  top: 31%;
}

.card3 {
  position: absolute;
  top: 58%;
}

.lines{
  width: 100%;
  height: 100vh;
}