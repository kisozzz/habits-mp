/* components/group-form/group-form.wxss */
.title {
  font-family: VT323;
  font-style: normal;
  font-weight: normal;
  font-size: 36px;
  line-height: 36px;
  color: #2C12A1;
  text-align: center;
  padding: 40rpx 40rpx 10rpx 40rpx;
}

.title-input {
  width: 550rpx !important;
  height: 76rpx !important;
  background: #FFFFFF;
  border: 2rpx solid #1E1C26;
  box-sizing: border-box;
  box-shadow: inset 0rpx 6rpx 0rpx rgba(0, 0, 0, 0.25);
  margin: auto;
  padding-left: 80rpx;
  padding-right: 80rpx;
}
.label {
  font-family: Overpass Mono;
  font-style: normal;
  font-weight: normal;
  font-size: 34rpx;
  line-height: 64rpx;
  color: #1E1C26;
  padding-bottom:14rpx;
}

.plusicon{
  width: 164rpx;
  height: 164rpx;
  position: relative;
  object-position: center;
  display: flex;
  justify-content: center;
}

.section {
  margin: 50rpx;

}

.form-container{
  width: 100%;
  height: 100vh;
}