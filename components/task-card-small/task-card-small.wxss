/* components/task-card-small/task-card-small.wxss */
.task-card {
  position: relative;
  width: 550rpx;
  height: 80rpx;
  background: #FFFFFF;
  border: 3rpx solid #2C12A1;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.task-name {
  padding: 30rpx;
  padding-left: 30rpx;
  font-family: Overpass Mono;
  font-style: normal;
  font-weight: normal;
  font-size: 30rpx;
  color: #2C12A1;
}

.cube {
  width: 40rpx;
  height: 40rpx;
  background: #F4F4F4;
  border: 2rpx solid #2C12A1;
  box-sizing: border-box;
  margin-left: 30rpx;
}

.xicon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 0;
  top: 0;
  padding: 2rpx;
  padding-right: 4rpx;
}