.btn-unset { 
  min-height: unset !important;
  width: unset !important;
  line-height: 0;
  padding: 0;
  background-color: transparent;
}

.btn {
  text-align:center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  border-radius:0rpx;
  background-color: var(--black);
  color: var(--white);
}

.btn-sm {
  text-align: center;
  font-weight: normal;
  font-size: 24rpx;
  padding: 20rpx 60rpx;
  background: var(--white);
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 !important;
  /* height: 60rpx !important; */
  border-radius: 0 !important;
  width: unset !important;
  min-height: unset !important;
}

.btn-transparent {
  background-color:white;
  color:var(--pri);
  font-weight:bold;
}

.btn-orange {
  background-color:var(--pri);
  color:white;
  font-weight:bold;
}

.btn-red {
  background-color:#FFEFEF;
  color:var(--red);
}

.btn-ghost-orange {
  border: solid 1px var(--pri);
  color:var(--pri);
  font-weight:bold;
}

.btn-big {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 340rpx !important;
  height: 80rpx;
  margin-top: 60rpx;
  background: #DBDDFC;
  border: 2rpx solid #2C12A1;
  border-radius: 0 !important;
  box-sizing: border-box;
  box-shadow: 0rpx 6rpx 0rpx #2C12A1;

  font-family: VT323;
  font-style: normal;
  font-weight: normal;
  font-size: 50rpx;
  line-height: 56rpx;
  text-align: center;
  letter-spacing: 3rpx;
  color: #2C12A1;
}